    <sql id="BASE_ALL_CLOUM">
        id,
        <include refid="BASE_COLUM_WITHOUT_ID"/>
    </sql>

	<sql id="BASE_COLUM_WITHOUT_ID">
		name,
		alias,
		profession,
		blood_type,
		constellation,
		sex,
		birthday,
		country,
		description,
		img_url,
		status,
		create_time,
		update_time
