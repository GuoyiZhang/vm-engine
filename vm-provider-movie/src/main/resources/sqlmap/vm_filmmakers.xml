    <select id="select" resultMap="VmFilmmakersMap">
        SELECT * FROM vm_filmmakers WHERE id = #{id}
    </select>


    <select id="selectInIds" resultMap="VmFilmmakersMap">
        SELECT
        <include refid="BASE_ALL_CLOUM"/>
        FROM
        vm_filmmakers
