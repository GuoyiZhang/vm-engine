		<include refid="queryCondition" />
	</select>

<insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO vm_filmmakers(
        <include refid="BASE_COLUM_WITHOUT_ID"/>
        )
        VALUES (
#{name},
#{alias},
#{profession},
#{bloodType},
#{constellation},
#{sex},
#{birthday},
#{country},
#{description},
#{imgUrl},
#{status},
#{createTime},
#{updateTime}
       )
				 </insert>

<delete id="delete">
		DELETE
		FROM
			vm_filmmakers
		WHERE
			id = #{id}
	</delete>

<update id="update" parameterType="com.vm.movie.dao.po.VmFilmmakers" >
UPDATE
		vm_filmmakers
<set>
<if test="name != null">name=#{name},</if>
<if test="alias != null">alias=#{alias},</if>
<if test="profession != null">profession=#{profession},</if>
<if test="bloodType != null">blood_type=#{bloodType},</if>
<if test="constellation != null">constellation=#{constellation},</if>
<if test="sex != null">sex=#{sex},</if>
