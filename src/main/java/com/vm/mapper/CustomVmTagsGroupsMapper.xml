<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vm.mapper.VmTagsGroupsMapper">
    <resultMap id="VmTagsGroupsWithTagsListMap" type="com.vm.base.bo.VmTagsGroupsWithTagsList">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="create_time" jdbcType="INTEGER" property="createTime"/>
        <result column="update_time" jdbcType="INTEGER" property="updateTime"/>
        <collection property="items" ofType="com.vm.base.po.VmTags">
            <id column="id" jdbcType="BIGINT" property="id"/>
            <result column="name" jdbcType="VARCHAR" property="name"/>
            <result column="tag_group_id" jdbcType="BIGINT" property="tagGroupId"/>
            <result column="status" jdbcType="TINYINT" property="status"/>
            <result column="create_time" jdbcType="INTEGER" property="createTime"/>
            <result column="update_time" jdbcType="INTEGER" property="updateTime"/>
        </collection>
    </resultMap>
    
    <select id="getTagsGroupsWithTags" resultMap="VmTagsGroupsWithTagsListMap">
      SELECT
            *
        FROM
            vm_tags_groups g
        LEFT JOIN vm_tags t ON g.id = t.tag_group_id
        WHERE
            g.`status` = 1
        AND t.`status` = 1
    </select>

</mapper>