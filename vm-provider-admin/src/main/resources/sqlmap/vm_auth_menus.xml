<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vm.admin.dao.mapper.VmAuthMenusMapper">
<resultMap type="com.vm.admin.dao.po.VmAuthMenus"  id="VmAuthMenusMap">
  <id column="id" property="id"/>
  <result column="menu_name" property="menuName"/>
  <result column="description" property="description"/>
  <result column="create_time" property="createTime"/>
  <result column="update_time" property="updateTime"/>
  <result column="is_deleted" property="isDeleted"/>
  <result column="status" property="status"/>
  <result column="path" property="path"/>
  <result column="pid" property="pid"/>
  <result column="is_leaf" property="isLeaf"/>
</resultMap>

    <sql id="BASE_ALL_CLOUM">
        id,
        <include refid="BASE_COLUM_WITHOUT_ID"/>
    </sql>

	<sql id="BASE_COLUM_WITHOUT_ID">
		menu_name,
		description,
		create_time,
		update_time,
		is_deleted,
		status,
		path,
		pid,
		is_leaf
	</sql>



	<select id="count" resultType="int">
		SELECT 
			count(1)
		FROM
		vm_auth_menus
		<include refid="queryCondition" />
	</select>

<insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO vm_auth_menus(
        <include refid="BASE_COLUM_WITHOUT_ID"/>
        )
        VALUES (
#{menuName},
#{description},
#{createTime},
#{updateTime},
#{isDeleted},
#{status},
#{path},
#{pid},
#{isLeaf}
       )
				 </insert>

<delete id="delete">
		DELETE
		FROM
			vm_auth_menus
		WHERE
			id = #{id}
	</delete>

<delete id="deleteBy">
		DELETE
		FROM
			vm_auth_menus
		<include refid="queryCondition" />
	</delete>

    <delete id="deleteInIds" >
        delete
        FROM
        vm_auth_menus
        WHERE id IN
        <foreach item="item" index="index" collection="idList" open="(" separator="," close=")">
            #{item}
        </foreach>

    </delete>

<update id="update" >
UPDATE
		vm_auth_menus
<include refid="setFields" />
WHERE
id=#{id}
</update>


<update id="batchUpdate">
UPDATE
		vm_auth_menus
<include refid="setFields" />
<include refid="queryCondition" />
</update>


    <update id="updateInIds">
        update 
        vm_auth_menus
       <include refid="setFields" />        WHERE id IN
        <foreach item="item" index="index" collection="idList" open="(" separator="," close=")">
            #{item}
        </foreach>

    </update>

	<select id="selectList" resultMap="VmAuthMenusMap">
		SELECT
			<include refid="BASE_ALL_CLOUM"/>
		FROM
		vm_auth_menus
		<include refid="queryCondition" />
		LIMIT #{start},#{size}

	</select>

	<select id="selectListOrderBy" resultMap="VmAuthMenusMap">
		SELECT
			<include refid="BASE_ALL_CLOUM"/>
		FROM
		vm_auth_menus
		<include refid="queryCondition" />
	<if test="orderBy != null and orderType != null">
			order by ${orderBy} ${orderType}
		</if>
		limit #{start},#{size}

	</select>

<sql id="queryCondition">
<trim prefix="where" prefixOverrides="and">
<if test="query != null">
<if test="query.menuName != null ">
		and menu_name=#{query.menuName}
</if>
<if test="query.description != null ">
		and description=#{query.description}
</if>
<if test="query.createTime != null ">
		and create_time=#{query.createTime}
</if>
<if test="query.updateTime != null ">
		and update_time=#{query.updateTime}
</if>
<if test="query.isDeleted != null ">
		and is_deleted=#{query.isDeleted}
</if>
<if test="query.status != null ">
		and status=#{query.status}
</if>
<if test="query.path != null ">
		and path=#{query.path}
</if>
<if test="query.pid != null ">
		and pid=#{query.pid}
</if>
<if test="query.isLeaf != null ">
		and is_leaf=#{query.isLeaf}
</if>
</if>
</trim>
</sql>


<sql id="setFields">
<set>
<trim suffix="" suffixOverrides=",">
<if test="newObj.menuName != null">menu_name=#{newObj.menuName},</if>
<if test="newObj.description != null">description=#{newObj.description},</if>
<if test="newObj.createTime != null">create_time=#{newObj.createTime},</if>
<if test="newObj.updateTime != null">update_time=#{newObj.updateTime},</if>
<if test="newObj.isDeleted != null">is_deleted=#{newObj.isDeleted},</if>
<if test="newObj.status != null">status=#{newObj.status},</if>
<if test="newObj.path != null">path=#{newObj.path},</if>
<if test="newObj.pid != null">pid=#{newObj.pid},</if>
<if test="newObj.isLeaf != null">is_leaf=#{newObj.isLeaf}</if>
</trim>
</set>
</sql>


<insert id="batchInsert"  useGeneratedKeys="true" parameterType="java.util.List" keyProperty="id">
        INSERT INTO vm_auth_menus(
        <include refid="BASE_COLUM_WITHOUT_ID"/>
)        VALUES 
   <foreach collection ="list" item ="item" index ="index" separator =","> 
(
#{item.menuName},
#{item.description},
#{item.createTime},
#{item.updateTime},
#{item.isDeleted},
#{item.status},
#{item.path},
#{item.pid},
#{item.isLeaf}
)
</foreach> 
</insert>


    <select id="select" resultMap="VmAuthMenusMap">
        SELECT * FROM vm_auth_menus WHERE id = #{id}
    </select>


    <select id="selectInIds" resultMap="VmAuthMenusMap">
        SELECT
        <include refid="BASE_ALL_CLOUM"/>
        FROM
        vm_auth_menus
        WHERE id IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>


    <select id="selectIdList" resultType="java.lang.Long">
        SELECT
 		 id 
        FROM
        vm_auth_menus
        <include refid="queryCondition" />

    </select>


	<select id="selectBy" resultMap="VmAuthMenusMap">
		SELECT * 
		FROM
		vm_auth_menus
		<include refid="queryCondition" />
	</select>


	<select id="selectOneBy" resultMap="VmAuthMenusMap">
		SELECT * 
		FROM
		vm_auth_menus
		<include refid="queryCondition" />
		LIMIT 1 
	</select>

</mapper>