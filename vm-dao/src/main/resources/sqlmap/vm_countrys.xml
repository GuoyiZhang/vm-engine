<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vm.dao.mapper.VmCountrysMapper">
<resultMap type="com.vm.dao.po.VmCountrys"  id="VmCountrysMap">
  <id column="id" property="id"/>
  <result column="code" property="code"/>
  <result column="name_chinese" property="nameChinese"/>
  <result column="name_english" property="nameEnglish"/>
  <result column="status" property="status"/>
  <result column="create_time" property="createTime"/>
  <result column="update_time" property="updateTime"/>
</resultMap>

    <sql id="BASE_ALL_CLOUM">
        id,
        <include refid="BASE_COLUM_WITHOUT_ID"/>
    </sql>

	<sql id="BASE_COLUM_WITHOUT_ID">
		code,
		name_chinese,
		name_english,
		status,
		create_time,
		update_time
	</sql>



	<select id="count" resultType="int">
		SELECT 
			count(1)
		FROM
		vm_countrys
		<include refid="queryCondition" />
	</select>

<insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO vm_countrys(
        <include refid="BASE_COLUM_WITHOUT_ID"/>
        )
        VALUES (
#{code},
#{nameChinese},
#{nameEnglish},
#{status},
#{createTime},
#{updateTime}
       )
				 </insert>

<delete id="delete">
		DELETE
		FROM
			vm_countrys
		WHERE
			id = #{id}
	</delete>

<update id="update" parameterType="com.vm.dao.po.VmCountrys" >
UPDATE
		vm_countrys
<set>
<if test="code != null">code=#{code},</if>
<if test="nameChinese != null">name_chinese=#{nameChinese},</if>
<if test="nameEnglish != null">name_english=#{nameEnglish},</if>
<if test="status != null">status=#{status},</if>
<if test="createTime != null">create_time=#{createTime},</if>
<if test="updateTime != null">update_time=#{updateTime}</if>
</set>
WHERE
id=#{id}
</update>


	<select id="selectList" resultMap="VmCountrysMap">
		SELECT
			<include refid="BASE_ALL_CLOUM"/>
		FROM
		vm_countrys
		<include refid="queryCondition" />
		LIMIT #{start},#{size}

	</select>

	<select id="selectListOrderBy" resultMap="VmCountrysMap">
		SELECT
			<include refid="BASE_ALL_CLOUM"/>
		FROM
		vm_countrys
		<include refid="queryCondition" />
	<if test="orderBy != null and orderType != null">
			order by ${orderBy} ${orderType}
		</if>
		limit #{start},#{size}

	</select>

<sql id="queryCondition">
<trim prefix="where" prefixOverrides="and">
<if test="query != null">
<if test="query.code != null ">
		and code=#{query.code}
</if>
<if test="query.nameChinese != null ">
		and name_chinese=#{query.nameChinese}
</if>
<if test="query.nameEnglish != null ">
		and name_english=#{query.nameEnglish}
</if>
<if test="query.status != null ">
		and status=#{query.status}
</if>
<if test="query.createTime != null ">
		and create_time=#{query.createTime}
</if>
<if test="query.updateTime != null ">
		and update_time=#{query.updateTime}
</if>
</if>
</trim>
</sql>


<insert id="batchInsert"  useGeneratedKeys="true" parameterType="java.util.List" keyProperty="id">
        INSERT INTO vm_countrys(
        <include refid="BASE_COLUM_WITHOUT_ID"/>
)        VALUES 
   <foreach collection ="list" item ="item" index ="index" separator =","> 
(
#{item.code},
#{item.nameChinese},
#{item.nameEnglish},
#{item.status},
#{item.createTime},
#{item.updateTime}
)
</foreach> 
</insert>


    <select id="select" resultMap="VmCountrysMap">
        SELECT * FROM vm_countrys WHERE id = #{id}
    </select>


    <select id="selectInIds" resultMap="VmCountrysMap">
        SELECT
        <include refid="BASE_ALL_CLOUM"/>
        FROM
        vm_countrys
        WHERE id IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>


    <select id="selectIdList" resultType="java.lang.Long">
        SELECT
 		 id 
        FROM
        vm_countrys
        <include refid="queryCondition" />

    </select>


	<select id="selectBy" resultMap="VmCountrysMap">
		SELECT * 
		FROM
		vm_countrys
		<include refid="queryCondition" />
	</select>


	<select id="selectOneBy" resultMap="VmCountrysMap">
		SELECT * 
		FROM
		vm_countrys
		<include refid="queryCondition" />
		LIMIT 1 
	</select>

</mapper>